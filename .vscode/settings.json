{
    "multiCommand.commands": [
        {
            "command": "multiCommand.f11",
            "sequence": [
                "workbench.action.files.saveAll",
                {"command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make gen format \u000D"}}]
                    // "args": {"text": "\u000D clear ; LANG=C make format \u000D"}}]
        },
        {
            "command": "multiCommand.f12",
            "sequence": [
                "workbench.action.files.saveAll",
                {"command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make all \u000D"}}]
        },
    ],

    // files
    "files.exclude": {
        "**/docs/**":true,
        "**/hanzi/**":true,
        "**/.vscode/*.log":true,
        "**/__pycache__/**":true,
    },
    "files.watcherExclude": {
        "**/docs/**":true,
        "**/__pycache__/**":true,
    },
    "files.associations": {
        "metaL.gen":"python", "rc":"python",
        "app.manifest":"jinja-json",
    },

    // editor
    "editor.tabSize": 4,
    "editor.rulers": [80],
    "workbench.tree.indent": 32,
    "git.ignoreLimitWarning": true,
}
